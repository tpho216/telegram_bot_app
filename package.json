{
    "name": "telegram quiz bot app",
    "version": "0.2.3",
    "description": "A quiz app that uses Urban bot API for Telegram specific use",
    "repository": {
        "type": "git",
        "url": "https://github.com/tpho216/telegram_bot_app"
    },
    "license": "MIT",
    "main": "dist/index.js",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build": "webpack",
        "start": "node dist/index.js",
        "debug": "nodemon --debug 3001",
        "lint": "eslint \"./src\" --ext \".js,.jsx,.ts,.tsx\"",
        "lint:fix": "npm run lint -- --fix",
        "dev": "nodemon",
        "postinstall": "tsc",
        "start-tunnel": "ngrok http 8080",
        "test": "jest",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@types/jest": "^26.0.23",
        "@types/node": "^15.12.4",
        "@types/react": "^17.0.9",
        "@urban-bot/core": "^0.2.5",
        "@urban-bot/facebook": "^0.2.5",
        "@urban-bot/slack": "^0.2.5",
        "@urban-bot/telegram": "^0.2.5",
        "dotenv": "^10.0.0",
        "file-loader": "^6.2.0",
        "pg": "^8.6.0",
        "react": "^16.14.0",
        "ts-loader": "^9.2.3",
        "turbocommons-ts": "^3.7.0",
        "typescript": "^4.3.4",
        "webpack": "^5.39.1",
        "webpack-cli": "^4.7.2",
        "webpack-node-externals": "^2.5.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.12",
        "@typescript-eslint/eslint-plugin": "^4.27.0",
        "@typescript-eslint/parser": "^4.28.2",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jest": "^24.3.6",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "jest": "^27.0.4",
        "ngrok": "^3.4.0",
        "nodemon": "^2.0.7",
        "prettier": "^2.3.1",
        "ts-jest": "^26.5.6"
    },
    "engines": {
        "node": ">=12.0.0"
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4,
        "arrowParens": "always",
        "endOfLine": "lf"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts,tsx,js,jsx,json",
        "exec": "webpack --mode=development && node ./dist/index.js"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "rootDir": "src"
    }
}
